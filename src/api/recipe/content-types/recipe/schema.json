{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "cooking_time": {
      "type": "string"
    },
    "servings": {
      "type": "integer"
    },
    "user_customized_recipe": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::user-customized-recipe.user-customized-recipe",
      "mappedBy": "recipe"
    },
    "favorite_recipe": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::favorite-recipe.favorite-recipe",
      "mappedBy": "recipe"
    },
    "instructions": {
      "type": "blocks"
    },
    "meal_plan_meals": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::meal-plan-meal.meal-plan-meal",
      "mappedBy": "recipes"
    },
    "recipe_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipe-categorie.recipe-categorie",
      "inversedBy": "recipes"
    },
    "recipe_subcategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipe-subcategorie.recipe-subcategorie",
      "inversedBy": "recipes"
    },
    "description": {
      "type": "text"
    },
    "nutrients": {
      "type": "component",
      "repeatable": true,
      "component": "recipie.nutrient-info"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "recipie.ingredients"
    }
  }
}
